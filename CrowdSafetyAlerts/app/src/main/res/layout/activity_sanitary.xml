<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.one.Sanitary"
    android:background="#006699">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time:"
        android:id="@+id/textView7"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_below="@+id/etCleanLoc"
        android:layout_alignStart="@+id/textView13" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCleanLoc"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/etCleanTIme"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Requse Cleaning"
        android:id="@+id/btnClean"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#006699"
        android:background="#3ded4c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:id="@+id/ivSan"
        android:background="@drawable/cap"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach Photo:"
        android:id="@+id/textView13"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_below="@+id/etCleanTIme"
        android:layout_alignStart="@+id/etCleanTIme" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/textView6"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sanitary"
        android:id="@+id/textView11"
        android:textSize="40dp"
        android:textColor="#4be349"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Right Here"
        android:id="@+id/btnSanMap"
        android:layout_below="@+id/ivSan"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="23dp"
        android:textColor="#3083e7"
        android:background="#84f378"
        android:layout_marginTop="10dp" />
</RelativeLayout>
