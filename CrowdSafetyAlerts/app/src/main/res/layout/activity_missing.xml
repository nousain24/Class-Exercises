<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chengen.one.Missing"
    android:background="#006699"
    android:clickable="true">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMiss"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attach Photo:"
        android:id="@+id/textView5"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_below="@+id/textView19"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:id="@+id/ivMiss"
        android:background="@drawable/cap"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnMiss"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:clickable="true"
        android:background="#72eef5"
        android:textSize="28dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iBDel"
        android:background="@drawable/ico_close"
        android:layout_alignTop="@+id/ivMiss"
        android:layout_toEndOf="@+id/ivMiss" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found"
        android:id="@+id/cbFind"
        android:checked="false"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_alignTop="@+id/cblose"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost"
        android:id="@+id/cblose"
        android:checked="false"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_below="@+id/etMiss"
        android:layout_alignEnd="@+id/textView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:id="@+id/textView4"
        android:textSize="26dp"
        android:textColor="#FFFF"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Gender:"
        android:id="@+id/textView12"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignEnd="@+id/textView18" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etGender"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignEnd="@+id/etMiss"
        android:layout_toEndOf="@+id/textView12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Miss&amp;Found"
        android:id="@+id/textView18"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFF"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:id="@+id/textView19"
        android:textColor="#FFFF"
        android:textSize="26dp"
        android:layout_alignBottom="@+id/etName"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/etName"
        android:layout_below="@+id/cbFind"
        android:layout_toStartOf="@+id/cblose" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Location"
        android:id="@+id/btnMissMap"
        android:textSize="26dp"
        android:textColor="#006699"
        android:layout_below="@+id/ivMiss"
        android:layout_alignEnd="@+id/etMiss"
        android:layout_marginTop="15dp" />

</RelativeLayout>
