<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#006699">

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iBAgg"
        android:background="@drawable/btn_aggression"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iBMed"
        android:background="@drawable/btn_medical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/iBSan"
        android:layout_alignParentEnd="true"
        android:layout_margin="1dp"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iBMiss"
        android:background="@drawable/btn_missing"
        android:layout_below="@+id/iBMed"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iBSan"
        android:background="@drawable/btn_sanitary"
        android:layout_below="@+id/iBAgg"
        android:layout_alignStart="@+id/iBMed"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/iBSusp"
        android:background="@drawable/btn_suspicion"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_below="@+id/iBMiss"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>

